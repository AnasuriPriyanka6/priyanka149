
pipeline {
  agent any
  tools { 
        maven 'Maven'
  }
  environment {
        MYJOB = 'DevOps1'
        BUILD = 'PIPELINE1'
  }
  stages {
   stage('Clone repository') {
      steps {
        checkout scm
        echo "Sudhakar"
        echo "$MYJOB"
        echo "$BUILD"
      }
    }
    stage('Build'){
      environment {
        MYJOB = 'DevOps2'
        BUILD = 'PIPELINE2'
    }
      steps {
        sh 'mvn sonar:sonar -Dsonar.host.url=http://sonarcloud.io -Dsonar.login=ae36ce047bda1abcce5c6d7e07e4b3c37e5e1ea7 -Dsonar.projectName=ztmbatch2 -Dsonar.projectKey=ztmbatch2 -Dsonar.sources=. -Dsonar.organization=ztmbatch2'
        sh 'mvn test'
        junit "**/target/surefire-reports/*.xml"
        echo "compilation done"
        echo "$MYJOB"
        echo "$WORKSPACE"

      }
      post {
        always {
          junit "**/target/surefire-reports/*.xml"
        }
      }
    }
  }
}
