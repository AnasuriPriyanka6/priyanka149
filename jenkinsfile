pipeline {
  agent any
  tools { 
        maven 'Maven'
  }
  stages {
    stage('Clone repository') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      steps {
         sh 'mvn clean package -DskipTests'
      } 
    }
    stage('createAnInstance')
    {
      steps {
          ansiblePlaybook become: true, credentialsId: 'SudhakarPrivateKey', disableHostKeyChecking: true, inventory: '/etc/ansible/hosts', playbook: '$WORKSPACE/createInstance.yaml'
      }
    }
    
    stage('InstallSoftwares and Deploy code')
    {
      steps {
        
           ansiblePlaybook become: true, colorized: true, credentialsId: 'SudhakarPrivateKey', disableHostKeyChecking: true, inventory: '/tmp/hosts', playbook: '$WORKSPACE/deployArtifact.yaml'

          }
    }
    
  }
}
