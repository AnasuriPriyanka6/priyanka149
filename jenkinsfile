pipeline {
  agent any
  tools { 
        maven 'Maven'
  }
  stages {
    stage('Clone repository') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      steps {
         sh 'mvn clean package -DskipTests'
      } 
    }
    stage('createAnInstance')
    {
      steps {
          ansiblePlaybook become: true, credentialsId: 'ansible', disableHostKeyChecking: true, inventory: '/etc/ansible/hosts', playbook: '$WORKSPACE/ec2.yaml'
          sh 'sleep 100'
      }
    }
    
    stage('InstallSoftwares and Deploy code')
    {
      steps {
        
          ansiblePlaybook become: true, colorized: true, credentialsId: 'ansible', disableHostKeyChecking: true, extras: '-e WORKSPACE=$WORKSPACE', inventory: '/etc/ansible/hosts', playbook: '$WORKSPACE/deployArtifact.yaml'

          }
    }
    
  }
}
